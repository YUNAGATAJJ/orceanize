<header class="bg-blue-400 sticky top-0 z-50">
  <div class='flex justify-between'>
    <div class="flex items-center">
      <%= link_to root_path do %>
        <%= image_tag('logo.png', class: 'w-10 h-10 rounded-full ml-1 mt-1 mb-1') %>
      <% end %>
      <div>
        <p class="text-sm md:text-xl text-sky-100 ml-2">Orceanize</p>
      </div>
    </div>
    <div class="flex justify-end items-center">
      <div>
        <%= link_to('Orceanizeとは', about_orceanize_path, class: 'text-sm md:text-xl mr-5 md:space-x-16 text-sky-100') %>
      </div>
      <div>
        <%= link_to login_path, class: 'text-sm md:text-xl mr-5 md:space-x-16 text-sky-100' do %>
          <i class="fa-solid fa-right-to-bracket"></i> Sign-In
        <% end %>
      </div>
      <div>
        <%= link_to new_user_path, class: 'text-sm md:text-xl mr-5 items-center text-sky-100' do %>
          <i class="fa-solid fa-user-plus"></i> Sign-Up
        <% end %>
      </div>
    </div>
  </div>
</header>
