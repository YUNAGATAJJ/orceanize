<header class="bg-blue-400 sticky top-0">
  <div class='flex justify-between'>

    <div class="flex items-center">
      <%= link_to root_path do %>
        <%= image_tag('logo.png', class: 'w-10 h-10 rounded-full ml-1 mt-1 mb-1') %>
      <% end %>
      <div>
        <p class="text-xl text-sky-100 ml-2">Orceanize</p>
      </div>
    </div>

    <div class="flex justify-end items-center">
      <div class="mr-5 items-center text-sky-100">
        <%= link_to '作品一覧', logged_in? ? posts_path : root_path %>
      </div>

      <div class="mr-5 items-center text-sky-100">
        <%= current_user.nickname if logged_in? %>さん
      </div>

      <%= button_to 'logout', logout_path, data: { turbo_method: :delete, turbo_confirm: 'ログアウトしますか?' }, class: 'mr-5 items-center text-sky-100', method: :delete %>

    </div>
  </div>
</header>
