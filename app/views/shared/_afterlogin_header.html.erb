<header class="bg-blue-400 sticky top-0 z-50">
  <div class='flex justify-between'>

    <div class="flex items-center group relative">
      <%= link_to root_path do %>
        <%= image_tag('logo.png', class: 'w-10 h-10 rounded-full ml-1 mt-1 mb-1') %>
        <div class="absolute top-full rounded-md w-auto p-2 bg-white text-black text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300 hidden group-hover:block">TOP</div>
      <% end %>
      <div>
        <p class="text-xl text-sky-100 ml-2">Orceanize</p>
      </div>
    </div>

    <div class="flex justify-end items-center">
      <div class="mr-5 items-center text-sky-100 group relative">
        <%= link_to logged_in? ? posts_path : root_path do %>
          <i class="fa-solid fa-brush"></i> Gallery
          <div class="absolute top-full rounded-md mt-3 w-48 p-2 bg-white text-black text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300 hidden group-hover:block">みんなの作品を見てみよう</div>
        <% end %>
      </div>

      <div class="mr-5 items-center text-sky-100">
        <i class="fa-solid fa-circle-user"></i> <%= current_user.nickname %>さん
      </div>
      <!-- <%= button_to 'logout', logout_path, data: { turbo_method: :delete, turbo_confirm: 'ログアウトしますか?' }, class: 'mr-5 items-center text-sky-100', method: :delete %> -->
      <%= button_to logout_path, data: { turbo_method: :delete, turbo_confirm: 'ログアウトしますか?' }, class: 'mr-5 items-center text-sky-100', method: :delete do %>
        <i class="fa-solid fa-right-from-bracket"></i> Logout
      <% end %>
    </div>
  </div>
</header>
