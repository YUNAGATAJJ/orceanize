<%= search_form_for q, url: url do |f| %>
  <div class="input-group mb-3">
    <div data-controller="autocomplete" data-autocomplete-url-value="/posts/search" role="combobox" class="flex">
      <%= f.search_field :title_or_description_cont,data: { autocomplete_target: 'input' }, class: 'form-control', placeholder: 'SEArch' %>
      <%= f.hidden_field :title_or_description, data: { autocomplete_target: 'hidden' } %>
      <ul class="list-group bg-white mt-11 absolute w-full md:text-sm max-w-max" data-autocomplete-target="results"></ul>
        <div class="absolute inset-y-0 left-0 flex items-center pointer-events-none pl-4">
          <svg class="h-4 w-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
          </svg>
        </div>
      <div class="input-group-append">
        <button type="submit" class="btn btn-primary">
          <i class="fa-brands fa-searchengin fa-2x ml-1 pt-1"></i>
        </button>
      </div>
    </div>
  </div>
<% end %>
